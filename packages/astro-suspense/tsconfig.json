{
  "include": ["src"],
  "compilerOptions": {
    "typeRoots": ["./typings"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "module": "ES2022",
    "outDir": "./dist",
    "target": "ES2021",
    "jsx": "preserve",
    "baseUrl": "./",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
